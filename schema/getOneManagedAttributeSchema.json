{
	"$id": "http://localhost:8080/json-schema/getOneManagedAttributeSchema.json",
	"base": "http://localhost:8080/api",
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Managed attributes schema",
	"description": "The managed attributes for the media metadata",
	"type": "object",
	"required": [
		"data"
	],
	"properties": {
		"data": {
			"type": "object",
			"required": [
				"id",
				"type",
				"attributes"
			],
			"additionalProperties": false,
			"properties": {
				"id": {
					"type": "string",
					"description": "Identifier of the managedAttribute as UUID"
				},
				"type": {
					"const": "managed-attribute",
					"description": "The type of the object being returned."
				},
				"attributes": {
					"required": [
						"name",
						"managedAttributeType"
					],
					"properties": {
						"name": {
							"type": "string",
							"description": "Name of the managed attribute",
							"examples": [
								"specimen_view",
								"identifier",
								"identifier_scope",
								"type_status"
							]							
						},
						"managedAttributeType": {
							"type": ["integer","string"],
							"description": "Type of the managed attribute"
						},						
						"acceptedValues": {
							"type": "array",
							"items": [
								{
									"type": "string",
									"description": "accepted value of the given managed attribute"
								}
							],
							"description": "Accepted values of the named attribute (if any)",
							"examples": [
								"dorsal for specimen_view",
								"CataloguedObject for identifier_scope"
							]							
						},
						"createdDate": {
							"type": "string",
							"description": "Date this managed attribute was created. "
						},
						"description": {
							"type": "object",
							"description": "A map where the language is the key and the value is the managed attribute's description in that language"		
						}
					}
				}
			}
		}
	}
}
